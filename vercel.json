{
	"version": 2,
	"builds": [
		{
			"src": "api/index.ts",
			"use": "@vercel/node",
			"config": {
				"includeFiles": ["src/**", "dist/**", "files/public/**", "public/**"]
			}
		}
	],
	"routes": [
		{
			"src": "/assets/(.*)",
			"dest": "/api"
		},
		{
			"src": "/js/(.*)",
			"dest": "/api"
		},
		{
			"src": "/(.*)",
			"dest": "/api"
		}
	],
	"env": {
		"NODE_ENV": "production"
	},
	"functions": {
		"api/index.ts": {
			"maxDuration": 30
		}
	}
}
